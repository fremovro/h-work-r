<div class="htop">
    <h2 class="text-center">{{t "menu.addingSpeaker"}} {{model.name}} {{model.surname}}</h2>
    <form class="edit-form">
        <div class="form-group row">
            <label for="inputSurname" class="col-sm-2 col-form-label text-right">{{t "menu.family"}}</label>
            <div class="col-sm-10">
                <input type="text" id="inputSurname" class="form-control form-control-lg" oninput={{action (mut speakerSurname) value="target.value"}}>
                {{#if (v-get this 'speakerSurname' 'isInvalid')}}
                    <span class="error-message">
                        {{v-get this 'speakerSurname' 'message'}}
                    </span>
                {{/if}}
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label text-right">{{t "menu.name_2"}}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control form-control-lg" id="inputName" oninput={{action (mut speakerName) value="target.value"}}>
                {{#if (v-get this 'speakerName' 'isInvalid')}}
                    <span class="error-message">
                        {{v-get this 'speakerName' 'message'}}
                    </span>
                {{/if}}
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label text-right">{{t "menu.patronymic"}}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control form-control-lg" id="inputPatronymic" oninput={{action (mut speakerPatronymic) value="target.value"}}>
                {{#if (v-get this 'speakerPatronymic' 'isInvalid')}}
                    <span class="error-message">
                        {{v-get this 'speakerPatronymic' 'message'}}
                    </span>
                {{/if}}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12 text-right">
                <button type="button" class="btn btn-primary btn-lg" onclick={{action "addSpeaker"}}>{{t "menu.add"}}</button>
                {{#link-to "speaker" class="btn btn-outline-secondary btn-lg"}}{{t "menu.cancel"}}{{/link-to}}
            </div>
        </div>
    </form>
</div>