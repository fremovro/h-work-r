<div class="htop">
    <h2 class="text-center">{{t "menu.addingBook"}}</h2>
    <form class="edit-form">
        <div class="form-group row">
            <label for="inputTitle" class="col-sm-2 col-form-label text-right">{{t "menu.name"}}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control form-control-lg" id="inputTitle" oninput={{action (mut bookName) value="target.value"}}>
                {{#if (v-get this 'bookName' 'isInvalid')}}
                    <span class="error-message">
                        {{v-get this 'bookName' 'message'}}
                    </span>
                {{/if}}
            </div>
        </div>
        <div class="form-group row">
            <label for="inputAuthor" class="col-sm-2 col-form-label text-right">{{t "menu.author"}}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control form-control-lg" id="inputAuthor" oninput={{action (mut bookAuthor) value="target.value"}}>
                {{#if (v-get this 'bookAuthor' 'isInvalid')}}
                    <span class="error-message">
                        {{v-get this 'bookAuthor' 'message'}}
                    </span>
                {{/if}}
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPagesCount" class="col-sm-2 col-form-label text-right">{{t "menu.numberOfPages"}}</label>
            <div class="col-sm-10">
                <input type="number" class="form-control form-control-lg" id="inputPagesCount" oninput={{action (mut bookSize) value="target.value"}}>
                {{#if (v-get this 'bookSize' 'isInvalid')}}
                    <span class="error-message">
                        {{v-get this 'bookSize' 'message'}}
                    </span>
                {{/if}}
            </div>
        </div>
        <div class="form-group row">
            <label for="inputDescriptionURL" class="col-sm-2 col-form-label text-right">{{t "menu.description"}}</label>
            <div class="col-sm-10">
                <input type="url" class="form-control form-control-lg" id="inputDescriptionURL" oninput={{action (mut bookDescription) value="target.value"}}>
            </div>
        </div>
        <div class="form-group row">
            <label for="customFile" class="col-sm-2 col-form-label text-right">{{t "menu.cover"}}</label>
            {{input-file class="input-group input-group-lg col-sm-10" uploadData=uploadData uploadDataChanged=(action "changeUploadData")}}
        </div>
        <div class="form-group row">
            <label for="inputTags" class="col-sm-2 col-form-label text-right">{{t "menu.tags"}}</label>
            <div class="col-sm-10">
                {{edit-tags tags=model onChange=(action "changeTags")}}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12 text-right">
                <button type="button" class="btn btn-primary btn-lg" onclick={{action "addBook"}}>{{t "menu.add"}}</button>
                {{#link-to "book" class="btn btn-outline-secondary btn-lg"}}{{t "menu.cancel"}}{{/link-to}}
            </div>
        </div>
    </form>
</div>